<h1>Courses</h1>

{{#if courses.length}}
	{{#each courses}}
		<div class="row">
			<div class="col s6 offset-s3">
				<div class="card">
					<div class="card-image">
						<img src="{{image}}" alt="{{title}}">
					</div>
					<div class="card-content">
						<span class="card-title">{{title}}</span>
						 <p class="price">Price: <span>{{price}}</span></p>
					</div>
					<div class="card-action actions">
						<a href="/courses/{{id}}" target="_blank">Open course</a>
						<a class="edit" href="/courses/{{id}}/edit?allow=true">Edit Course</a>
						<form action="/card/add" method="POST">
							<input type="hidden" name="id" value="{{id}}">
							<button type="submit" class="btn btn-primary">Buy Course</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	{{/each}}
{{else}}
	<h4>No courses added yet</h4>
{{/if}}