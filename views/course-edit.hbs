<h1>Edit course {{course.title}}</h1>

<form action="/courses/edit" method="POST">
	<div class="input-field ">
		<input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
		<label for="title">Course name</label>
	<span class="helper-text" data-error="Enter name course!"></span>
	</div>

	<div class="input-field ">
		<input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
		<label for="price">Course price</label>
		<span class="helper-text" data-error="Enter price!"></span>
	</div>

	<div class="input-field ">
		<input id="img" name="image" type="text" class="validate" required value="{{course.image}}">
		<label for="img">Course image</label>
		<span class="helper-text" data-error="Insert image!"></span>
	</div>

	<input type="hidden" name="_id" value="{{course._id}}">

	<button type="submit" class="btn btm-primary btn-submit">Submit</button>
</form>

<form action="/courses/remove" method="POST">
	<input type="hidden" name="_id" value="{{course._id}}">
	<button type="submit" class="btn btm-primary btn-delete btn-submit">Delete</button>
</form>