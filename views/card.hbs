<h1>Cart</h1>

<div id="card">

	{{#if courses.length}}
		{{#each courses}}
			<div class="main">
				<div class="image">
					<img src="{{image}}" alt="{{title}}">
				</div>
				<div class="course-title">
					{{title}}
				</div>
				<div class="price">
					<div class="count">Count: {{count}}</div>
					<div>
						Price: <span>{{price}}</span> 
					</div>
				</div>
				<button class="btn btm-primary cart-btn js-remove" data-id="{{_id}}">Delete</button>
			</div>
		{{/each}}

		<div class="all-price">
			Price: <span>{{@root.price}}</span> 
		</div>

		<form class="order-form" action="/orders" method="POST">
			<button type="submit" class="btn">To order</button>
		</form>
	{{else}}
		<p>Cart is empty!</p>
	{{/if}}

</div>