<h1>Add new course!</h1>

{{#if error}}
	<p class="alert">{{error}}</p>
{{/if}}
<form action="/add" method="POST">
	<div class="input-field ">
		<input id="title" name="title" type="text" class="validate" value="{{data.title}}" required>
		<label for="title">Course name</label>
	<span class="helper-text" data-error="Enter name course!"></span>
	</div>

	<div class="input-field ">
		<input id="price" name="price" type="number" class="validate" value="{{data.price}}" required min="1">
		<label for="price">Course price</label>
		<span class="helper-text" data-error="Enter price!"></span>
	</div>

	<div class="input-field ">
		<input id="img" name="image" type="text" class="validate" value="{{data.image}}" required>
		<label for="img">Course image</label>
		<span class="helper-text" data-error="Insert image!"></span>
	</div>

	<input type="hidden" name="_csrf" value="{{csrf}}">

	<button class="btn btm-primary">Submit</button>
</form>