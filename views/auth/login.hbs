<div class="auth">
	<div class="row">
		<div class="col s12">
			<ul class="tabs">
				<li class="tab col s6"><a class="active" href="#login">Login</a></li>
				<li class="tab col s6"><a href="#register">Register</a></li>
			</ul>
		</div>
		<div id="login" class="col s6 offset-s3">
			<div class="row">
				<form action="/auth/login" method="POST" class="col s12">
					<div class="row">
						<div class="input-field col s12">
							<input id="email" type="email" class="validate" required>
							<label for="email">Email</label>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<input id="password" type="password" class="validate" required>
							<label for="password">Password</label>
						</div>
					</div>

					<button type="submit" class="btn btm-primary btn-submit">Login</button>
				</form>
			</div>
		</div>
		<div id="register" class="col s6 offset-s3">
			<div class="row">
				<form action="/auth/register" method="POST" class="col s12">
					<div class="row">
						<div class="input-field col s6">
							<input placeholder="Placeholder" id="first_name" type="text" class="validate" required>
							<label for="first_name">Your login</label>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<input id="remail" type="email" class="validate" required>
							<label for="remail">Email</label>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<input id="rpassword" type="password" class="validate" required>
							<label for="rpassword">Password</label>
						</div>
						<div class="input-field col s12">
							<input id="rpassword" type="password" class="validate" required>
							<label for="rpassword">Password</label>
						</div>
					</div>

					<button type="submit" class="btn btm-primary btn-submit">Register</button>
				</form>
			</div>
		</div>
	</div>
</div>