<div class="auth">
	<div class="row">
		<div class="col s12">
			<ul class="tabs">
				<li class="tab col s6"><a class="active" href="#login">Login</a></li>
				<li class="tab col s6"><a href="#register">Register</a></li>
			</ul>
		</div>
		<div id="login" class="col s6 offset-s3">
			<div class="row">
				<form action="/auth/login" method="POST" class="col s12">
					<div class="row">
						<div class="input-field col s12">
							<input id="email" name="email" type="email" class="validate" required>
							<label for="email">Email</label>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<input id="password" name="password" type="password" class="validate" required>
							<label for="password">Password</label>
						</div>
					</div>

					<input type="hidden" name="_csrf" value="{{csrf}}">

					{{#if errorLogin}}
						<p>{{errorLogin}} <a href="/auth/login#register">REGISTER</a></p>
					{{/if}}

					{{#if errorLoginPass}}
						<p>{{errorLoginPass}}</p>
					{{/if}}

					<p><a href="/auth/reset">Forgot your password?</a></p>

					<button type="submit" class="btn btm-primary btn-submit">Login</button>
				</form>
			</div>
		</div>
		<div id="register" class="col s6 offset-s3">
			<div class="row">
				<form action="/auth/register" method="POST" class="col s12">
					<div class="row">
						<div class="input-field col s6">
							<input placeholder="Your Name" id="name" name="name" type="text" class="validate" required>
							<label for="name">Your Name</label>
							<span class="helper-text" data-error="Please enter a name"></span>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<input id="remail" name="email" type="email" class="validate" required>
							<label for="remail">Email</label>
							<span class="helper-text" data-error="Please enter a email"></span>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s12">
							<input id="rpassword" name="password" type="password" class="validate" required>
							<label for="rpassword">Password</label>
							<span class="helper-text" data-error="Please enter a password"></span>
						</div>
						<div class="input-field col s12">
							<input id="rpassword" name="confirm" type="password" class="validate" required>
							<label for="rpassword">Password</label>
							<span class="helper-text" data-error="Please enter your password again"></span>
						</div>
					</div>

					<input type="hidden" name="_csrf" value="{{csrf}}">
					{{#if errorRegister}}
						<p>{{errorRegister}} <a href="/auth/login">LOGIN</a></p>
					{{/if}}
					<button type="submit" class="btn btm-primary btn-submit">Register</button>
				</form>
			</div>
		</div>
	</div>
</div>